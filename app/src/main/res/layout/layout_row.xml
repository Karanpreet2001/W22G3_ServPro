<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:background="#FAF6F6">

    <ImageView
        android:id="@+id/imgViewSerPro"
        android:layout_width="133dp"
        android:layout_height="160dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtProName"
        android:layout_width="129dp"
        android:layout_height="37dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imgViewSerPro"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtProCity"
        android:layout_width="194dp"
        android:layout_height="31dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgViewSerPro"
        app:layout_constraintTop_toBottomOf="@+id/txtProPhone"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/txtProWage"
        android:layout_width="62dp"
        android:layout_height="61dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="22sp"/>

    <TextView
        android:id="@+id/txtProPhone"
        android:layout_width="133dp"
        android:layout_height="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"

        app:layout_constraintStart_toEndOf="@+id/imgViewSerPro"
        app:layout_constraintTop_toBottomOf="@+id/txtProName" />

</androidx.constraintlayout.widget.ConstraintLayout>